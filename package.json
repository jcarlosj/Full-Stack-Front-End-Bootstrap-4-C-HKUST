{
  "name": "confusion",
  "version": "1.0.0",
  "description": "This is a website for Ristorante Con Fusion",
  "main": "index.html",
  "scripts": {
    "start": "npm run watch:all",
    "lite": "lite-server",
    "scss": "node-sass -o ./css/ ./css/",
    "watch:scss": "onchange './css/*.scss' -- npm run scss",
    "watch:all": "parallelshell 'npm run watch:scss' 'npm run lite'",
    "clean": "rimraf ./dist && rimraf ./node_modules",
    "clean:dist": "rimraf ./dist",
    "clean:modules": "rimraf ./node_modules",
    "copy:fonts": "copyfiles -f ./node_modules/font-awesome/fonts/* ./dist/fonts",
    "build": "npm run clean:dist && npm run copy:fonts && npm run build:images && npm run build:html",
    "build:images": "imagemin ./img/* --out-dir=./dist/img",
    "build:html": "usemin aboutus.html -d dist --htmlmin -o ./dist/aboutus.html && usemin contactus.html -d dist --htmlmin -o ./dist/contactus.html && usemin index.html -d dist --htmlmin -o ./dist/index.html",
    "build:modules": "npm install"
  },
  "author": "Juan Carlos Jiménez Gutiérrez <jcjimenez29@misena.edu.co>",
  "license": "ISC",
  "devDependencies": {
    "copyfiles": "^2.3.0",
    "cssmin": "^0.4.3",
    "grunt": "^1.2.1",
    "grunt-browser-sync": "^2.2.0",
    "grunt-contrib-watch": "^1.1.0",
    "grunt-sass": "^3.1.0",
    "htmlmin": "0.0.7",
    "imagemin-cli": "^6.0.0",
    "jit-grunt": "^0.10.0",
    "lite-server": "^2.5.4",
    "node-sass": "^4.14.1",
    "onchange": "^7.0.2",
    "parallelshell": "^3.0.2",
    "rimraf": "^3.0.2",
    "time-grunt": "^2.0.0",
    "uglify-js": "^2.4.11",
    "usemin-cli": "^0.6.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.13.1",
    "bootstrap": "^4.5.0",
    "bootstrap-social": "^5.1.1",
    "jquery": "^3.5.1",
    "popper.js": "^1.16.0"
  }
}
